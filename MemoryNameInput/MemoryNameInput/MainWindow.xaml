<Window x:Class="MemoryNameInput.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryNameInput"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            
        </Grid.RowDefinitions>

        <Label Content="Enter your username" FontSize="30"   Margin="5"/>
        <TextBox Grid.Row="1" Name="UName1Input" FontSize="40" FontFamily="Century Gothic" Margin="164,10,165,10"/>
        <TextBox Grid.Row="2" Name="UName2Input" FontSize="40" FontFamily="Century Gothic" Margin="164,10,165,5"/>
        <Button Grid.Row="3" Content="OK" Margin="320,7,344,1" Click="UNameBtnClick" RenderTransformOrigin="0.5,0.5"/>
        <Label Grid.Row="4" Name="UName1Label" FontSize="40" FontFamily="Century Gothic" Margin="10,4,445,6"/>
        <Label Grid.Row="4" Name="UName2Label" FontSize="40" FontFamily="Century Gothic" Margin="485,10,10,4" RenderTransformOrigin="0.605,0.405"/>

    </Grid>

</Window>
